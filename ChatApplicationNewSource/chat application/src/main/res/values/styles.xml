<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <!-- Customize your theme here. -->
        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>
        <item name="android:actionBarWidgetTheme">@style/PopupMenuTextView</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>

        <!-- Change Overflow Menu ListView Item Height & Property -->
       <!-- <item name="android:listPreferredItemHeightSmall">45dp</item>
        <item name="android:listPreferredItemPaddingLeft">5dp</item>
        <item name="android:listPreferredItemPaddingRight">5dp</item>-->
    </style>


    <!-- Change Overflow Menu ListView Divider Property -->
    <style name="PopupMenuListView" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:divider">#FFFFFF</item>
        <item name="android:dividerHeight">2dp</item>
    </style>

    <!-- Change Overflow Menu ListView Text Size and Text Size -->
    <style name="PopupMenuTextView" parent="@style/android:Theme.Holo.Light">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">28dp</item>
    </style>

    <!-- Change Overflow Menu Background -->
    <style name="PopupMenu" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">#FFFFFF</item>
    </style>







    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:activatedBackgroundIndicator">@drawable/list_item_background</item>
    </style>

    <style name="CustomToolBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">#212121</item>

    </style>

    ======================================================================================================================================================================================================
    <!-- Common Styles-->
    ======================================================================================================================================================================================================

    <!--About SmallLabel Text-->
    <style name="SmallLabelTextStyle">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_small</item>
    </style>

    <!--About SmallLabel But Multiline Text with color black-->
    <style name="SmallLabelMultilineTextStyle">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="TargetDesignationText">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/text_darkgrey</item>
    </style>

    <!--About TargetSmalLabelText Text with color black-->
    <style name="TargetSmallLabelText">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <!--SMALLTEXT HOME-->
    <style name="TimeStampStyle">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textColor">@color/text_darkgrey</item>
    </style>


    <!--About MediumLabelText-->
    <style name="MediumLabelStyle">
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MediumLabelStyle2">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!--About MediumLabelText-->
    <style name="MediumLabelStyle1">
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:layout_marginLeft">@dimen/metrics_14</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!--About Edit Text-->
    <style name="EditTextStyle">
        <item name="android:textSize">@dimen/text_20</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginBottom">@dimen/metrics_10</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- About Blue Button Small-->
    <style name="Blue_button_small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/metrics_20</item>
        <item name="android:background">@drawable/smallbluebutton</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- About Grey Button Small-->
    <style name="Grey_button_small">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/metrics_20</item>
        <item name="android:background">@drawable/smallgraybutton</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="MySpinnerLook">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ViewLine_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/metrics_1</item>
        <item name="android:background">@color/viewColor</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearnace</item>
    </style>

    <style name="MyCustomTextAppearnace" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

