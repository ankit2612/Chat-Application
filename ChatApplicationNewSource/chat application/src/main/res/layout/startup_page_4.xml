<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--ImageView For startUp page4-->
    <ImageView
        android:id="@+id/startup_image_4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/startup_image_4" />

    <!--Large TextView For startUp page4-->
    <TextView
        android:id="@+id/startup_text_4_Large"
        style="@style/startup_page4_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_page4_text1"/>

    <!--small TextView For startUp page4-->
    <TextView
        android:id="@+id/startup_text_4_small"
        style="@style/startup_page4_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startup_text_4_Large"
        android:text="@string/start_page4_text2" />


</RelativeLayout>
