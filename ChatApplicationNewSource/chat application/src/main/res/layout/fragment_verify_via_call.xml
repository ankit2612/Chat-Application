<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    tools:context="com.login_registration.ui.login.VerifyViaCall">

    <include
        android:id="@+id/header"
        layout="@layout/activity_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/metrics_58" />
    <View
        android:id="@+id/header_shadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/metrics_4"
        android:layout_below="@id/header"
        android:background="@drawable/toolbar_shadow_view"/>


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:layout_below="@+id/header_shadow">

            <TextView
                android:id="@+id/txtView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/VCode_PhoneCall"
                style="@style/SmallLabelMultilineTextStyle"/>

            <Button
                android:id="@+id/btnPhone"
                android:background="@drawable/smallbluebutton"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="@string/btn_PhoneCall"
                style="@style/Blue_button_small"
                android:onClick="next"
                android:layout_below="@id/txtView4"/>
        </LinearLayout>
    </RelativeLayout>
