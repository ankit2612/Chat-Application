<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="#F7F7F7">

    <!--Header Starts-->
    <ImageButton
        android:id="@+id/hbso_back_ImageButton"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/back_btn"
        android:src="@drawable/ic_action_back" />


    <ImageButton
        android:id="@+id/hbso_overflow_ImageButton"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/overflow_btn"
        android:src="@drawable/ic_action_overflow" />
    <!--//TODO
    changed
    android:background="@drawable/ic_action_add"/>
    to
    android:background="@drawable/ic_Login_overflowMenu"/>
    -->

    <!--//TODO
    changed
    android:background="@drawable/ic_action_back"
    to
    android:background="@drawable/ic_login_BackButton"
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/hbso_overflow_ImageButton"
        android:layout_toRightOf="@id/hbso_back_ImageButton"
        android:background="@drawable/header_search_shape"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <EditText
            android:id="@+id/hbso_search_EditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/header_search_bar_bg"
            android:contentDescription="@string/search_chat"
            android:hint="@string/search_chat"
            android:singleLine="true" />

        <ImageButton
            android:id="@+id/hbso_search_ImageButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_launcher" />

    </LinearLayout>


    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/black" />


    <!--Hack for proper display of overflow menu-->

    <View
        android:id="@+id/hbso_bottom_bar_menu_View"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/black" />

    <!--Ends Here-->

    <!--Header Ends-->
</RelativeLayout>
