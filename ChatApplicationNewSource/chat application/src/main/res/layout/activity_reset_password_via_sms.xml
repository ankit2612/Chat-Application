<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    tools:context="com.login_registration.ui.login.ResetPasswordViaSms">

    <include
        android:id="@+id/header"
        layout="@layout/activity_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/metrics_58" />
    <View
        android:id="@+id/header_shadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/metrics_4"
        android:layout_below="@id/header"
        android:background="@drawable/toolbar_shadow_view"/>

    <!--  Password Label -->
    <TextView
        android:id="@+id/txtView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_shadow"
        android:paddingTop="@dimen/metrics_16"
        android:paddingLeft="@dimen/metrics_10"
        android:text="@string/Registered_Mobile"
        android:textAppearance="@style/SmallLabelTextStyle" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtView"
        android:orientation="horizontal"
        android:padding="@dimen/metrics_10">

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtView"
            android:hint="@string/UserMobile_Hint"
            android:singleLine="true"
            android:textAppearance="@style/EditTextStyle" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:src="@mipmap/ic_login_activeimage"
            android:visibility="invisible" />

    </LinearLayout>
    <!-- Login buttonblue -->
    <Button
        android:id="@+id/btnVerify"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@id/linearLayout1"
        android:layout_centerInParent="true"
        android:text="@string/btn_Next"
        style="@style/Blue_button_small" />

</RelativeLayout>
