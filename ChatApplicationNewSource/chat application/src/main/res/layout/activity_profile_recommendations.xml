<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.plusconnect.contact.recommendations.ProfileRecommendations">

    <!--Including Header-->
    <include
        android:id="@+id/header"
        layout="@layout/activity_header"
        android:layout_width="match_parent"
        android:layout_height="58dp" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/header"
        android:background="@drawable/toolbar_shadow_view" />

    <!--Section Reviews Layout-->
    <TextView
        android:id="@+id/txtWriteRecommen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        style="@style/MediumLabelStyle"
        android:textColor="@color/button_blue"
        android:layout_below="@id/header"
        android:padding="10dp"
        android:text="Go to recommendations" />

    <!--Main Parent Layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txtWriteRecommen"
        android:background="#F5F5F0"
        android:orientation="vertical">

        <!--Review Details Listview Layout-->
        <ListView
            android:id="@+id/listRecommendationDetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="10dp" />

    </LinearLayout>

</RelativeLayout>

