<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="horizontal"
    android:background="#d1d4d8">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="30dp"
        android:orientation="horizontal"
        android:background="#ffffff">

        <ImageButton
            android:id="@+id/cc_emoticon_ImageButton"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_hardware_keyboard_alt" />


        <com.rockerhieu.emojicon.EmojiconEditText
            android:id="@+id/cc_message_box_EditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="35dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/cc_emoticon_ImageButton"
            android:background="@color/white"
            android:hint="@string/chat_hint"
            android:textColor="#99000000" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/sendButtonContainerRelativeLayout"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|right"
        >

        <ImageButton
            android:id="@+id/cc_speaker_ImageButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:visibility="gone"

            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_av_volume_up" />

        <ImageButton
            android:id="@+id/cc_send_ImageButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_content_send" />
    </FrameLayout>
</FrameLayout>